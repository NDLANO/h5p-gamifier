[
  {
    "name": "content",
    "type": "list",
    "label": "List of contents",
    "importance": "high",
    "widgets": [
      {
        "name": "VerticalTabs",
        "label": "Default"
      }
    ],
    "min": 1,
    "entity": "content",
    "field": {
      "name": "content",
      "type": "group",
      "fields": [
        {
          "name": "libraryParams",
          "type": "library",
          "label": "Content",
          "importance": "high",
          "options": [
            "H5P.DragQuestion 1.14",
            "H5P.DragText 1.10",
            "H5P.Blanks 1.14",
            "H5P.ImageHotspotQuestion 1.8",
            "H5P.MarkTheWords 1.11",
            "H5P.MultiChoice 1.16",
            "H5P.SortParagraphs 0.11",
            "H5P.Summary 1.10",
            "H5P.AdvancedText 1.1",
            "H5P.VocabularyDrill 1.0"
          ]
        },
        {
          "name": "attempts",
          "type": "number",
          "label": "Attempts",
          "description": "Number of attempts a user has to complete the content.",
          "min": 1,
          "optional": true
        },
        {
          "name": "timeLimit",
          "type": "number",
          "label": "Time limit",
          "description": "Optional time limit in seconds. If a user exceeds this time, the exercise cannot be edited anymore.",
          "min": 1,
          "optional": true
        }
      ]
    }
  },
  {
    "name": "audio",
    "type": "group",
    "importance": "low",
    "label": "Audio settings",
    "fields": [
      {
        "name": "backgroundMusic",
        "type": "audio",
        "label": "Background music",
        "optional": true
      },
      {
        "name": "events",
        "type": "group",
        "label": "Event sounds",
        "importance": "low",
        "fields": [
          {
            "name": "goto",
            "type": "audio",
            "label": "Go previous/next content",
            "description": "Sound played when navigating to the previous or next content.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "correctAnswer",
            "type": "audio",
            "label": "Correct answer",
            "description": "Will be played when the user answers correctly.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "wrongAnswer",
            "type": "audio",
            "label": "Wrong answer",
            "description": "Will be played when the user answers incorrectly.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "lostLife",
            "type": "audio",
            "label": "Lost a life",
            "description": "Will be played when the user loses a life.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "attemptsExceeded",
            "type": "audio",
            "label": "Attempts exceeded",
            "description": "Will be played when the user exceeds the maximum number of attempts for an exercise.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "timeWarningGlobal",
            "type": "audio",
            "label": "Global time warning",
            "description": "Sound played when the global time is about to expire.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "timeExpired",
            "type": "audio",
            "label": "Time expired",
            "description": "Sound played when the time is up for one exercise.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "timeExpiredTotal",
            "type": "audio",
            "label": "Time expired total",
            "description": "Sound played when the time is up for all exercises.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "dialogOpened",
            "type": "audio",
            "label": "Dialog opened",
            "description": "Sound played when a dialog is opened.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          },
          {
            "name": "dialogClosed",
            "type": "audio",
            "label": "Dialog closed",
            "description": "Sound played when a dialog is closed.",
            "optional": true,
            "widgetExtensions": [
              "GameSounds"
            ]
          }
        ]
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "importance": "low",
    "label": "Behavioural settings",
    "fields": [
      {
        "name": "globalTimeLimit",
        "type": "number",
        "label": "Global time limit",
        "description": "Optional global time limit in seconds. If a user exceeds this time, all the exercises cannot be edited anymore.",
        "min": 1,
        "optional": true
      },
      {
        "name": "timeWarningGlobal",
        "type": "number",
        "label": "Global time warning",
        "description": "Optional time in seconds before the global time expires to show a warning.",
        "min": 1,
        "optional": true
      },
      {
        "name": "cycle",
        "type": "boolean",
        "label": "Cycle through contents",
        "description": "Go back to first item after last and vide versa.",
        "default": false
      },
      {
        "name": "displayPageAnnouncement",
        "type": "boolean",
        "label": "Display current page in toolbar",
        "default": true
      },
      {
        "name": "displayContentAnnouncement",
        "type": "boolean",
        "label": "Display content title in toolbar",
        "default": true
      }
    ]
  },
