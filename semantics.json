      {
        "name": "timeExpiredGlobal",
        "type": "text",
        "label": "Time expired for global",
        "default": "You ran out of time for this content!"
      },
      {
        "name": "settings",
        "type": "text",
        "label": "Settings",
        "default": "Settings"
      },
      {
        "name": "volumeMusic",
        "type": "text",
